<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hitechgroupindia.hitechgroup" >


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/hitechlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppFullScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Activity.FullScreenImage"
            android:label="@string/title_activity_full_screen_image"
            android:theme="@style/CustomActivityTheme" >
        </activity>
        <activity
            android:name=".Activity.FullScreenViewPager"
            android:label="@string/title_activity_full_screen_view_pager"
            android:theme="@style/CustomActivityTheme" >
        </activity>
        <activity
            android:name=".Activity.ContactUsActivity"
            android:theme="@style/CustomActivityTheme" />
        <activity
            android:name=".Activity.HitechFarmActivity"
            android:label="@string/title_activity_hitech_farm"
            android:theme="@style/CustomActivityTheme" >
        </activity>
        <activity
            android:name=".Activity.VisionMissionActivity"
            android:label="@string/title_activity_vision_mission"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name=".Activity.AboutUsActivity"
            android:theme="@style/CustomActivityTheme" >
        </activity>
        <activity
            android:name=".Activity.GalleryActivity"
            android:theme="@style/CustomActivityTheme" >
        </activity>
        <activity
            android:name=".Activity.ProjectActivity"
            android:theme="@style/CustomActivityTheme" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/MyMaterialTheme.Base"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <activity
            android:name=".NavigationDrawerActivity"
            android:theme="@style/navigation_actionbar">
        </activity>
    </application>

</manifest>
